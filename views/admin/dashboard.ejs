<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css'>
    <link rel='stylesheet' href='/css/mobile.css' media='screen and (max-width: 880px) and (min-width:5px)'>
  </head>
  <body>
    <header><h1><%= title %></h1></header>
    <h2><%= admin_id %></h2>
    <p class="logout"><a href="/admin/logout">Logout</a></p>
    <table>
      <thead>
        <tr>
          <th>User ID</th>
          <th>Created at</th>
          <th></th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td>&nbsp;</td>
          <td></td>
          <td></td>
        </tr>
      </tfoot>
      <% if (users.length) { %>
      <% users.forEach(function (user) { %>
      <tr>
        <td><a href="/admin/<%= user.user_id %>/detail"><%= user.user_id %></a></td>
        <td><%= user.created_at %></td>
        <td>
          <form method="post" action="/user/delete">
            <input type="hidden" name="user_id" value="<%= user.user_id %>">
            <input type="submit" value="Delete" onclick="return confirm('<%= user.user_id %> を削除しますか？');">
          </form>
        </td>
      </tr>
      <% }) %>
      <% } %>
    </table>
  </body>
</html>
